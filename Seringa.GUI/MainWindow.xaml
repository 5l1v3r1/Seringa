<Window x:Class="Seringa.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:sysioports="clr-namespace:Seringa.Engine.Utils;assembly=Seringa.Engine"
        WindowStartupLocation="CenterScreen"
        Title="Seringa" Height="636" Width="900" Loaded="Window_Loaded">

    <Window.Resources>
        <ObjectDataProvider x:Key="proxyTypes"
                    MethodName="GetValues" ObjectType="{x:Type sys:Enum}" >
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="sysioports:ProxyType" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>

    <Grid Height="607">
        <TabControl Height="620" HorizontalAlignment="Left" Name="tabControl1" VerticalAlignment="Top" Width="878">
            <TabItem Header="Obtain urls" Name="tabGetUrls">
            </TabItem>
            <TabItem Header="Filter urls" Name="tabFilterUrls"></TabItem>
            <TabItem Header="Single url operations" Name="tabSingleUrl">
                <Grid Name="gridSingleUrl" Height="585">
                    
                    
                    <Label Content="Url" Height="28" HorizontalAlignment="Left" Margin="5,2,0,0" Name="lblurl" VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="36,4,0,0" Name="txtUrl" VerticalAlignment="Top" Width="825" GotFocus="txtUrl_GotFocus" LostFocus="txtUrl_LostFocus" />
                    <Button Content="Execute" Height="23" HorizontalAlignment="Left" Margin="786,112,0,0" Name="btnExecuteCustomQuery" VerticalAlignment="Top" Width="75" Click="btnExecuteCustomQuery_Click" />
                    <TextBox Height="55" HorizontalAlignment="Left" Margin="5,140,0,0" Name="txtCustomQuery" VerticalAlignment="Top" Width="862" LostFocus="txtCustomQuery_LostFocus" />
                    <Label Content="Custom query" Height="28" HorizontalAlignment="Left" Margin="5,111,0,0" Name="lblCustomQuery" VerticalAlignment="Top" />
                    <TextBox Height="138" HorizontalAlignment="Left" Margin="6,219,0,0" Name="txtCustomQueryResult" VerticalAlignment="Top" Width="862" />
                    <Label Content="Custom query result" Height="28" HorizontalAlignment="Left" Margin="5,193,0,0" Name="label1" VerticalAlignment="Top" />
                    <Label Content="Injection Strategy" Height="28" HorizontalAlignment="Left" Margin="5,28,0,0" Name="label4" VerticalAlignment="Top" />
                    <ComboBox Height="23" HorizontalAlignment="Left" Margin="114,30,0,0" Name="cbCurrentInjectionStrategy" VerticalAlignment="Top" Width="346" ItemsSource="{Binding}" SelectionChanged="cbCurrentInjectionStrategy_SelectionChanged" />
                    <Button Content="Stop current action" Height="23" HorizontalAlignment="Left" Margin="653,112,0,0" Name="btnStopCurAction" VerticalAlignment="Top" Width="114" Click="btnStopCurAction_Click" />
                    <Label Content="Payload" Height="28" HorizontalAlignment="Left" Margin="5,86,0,0" Name="label5" VerticalAlignment="Top" />
                    <ComboBox Height="23" HorizontalAlignment="Left" ItemsSource="{Binding}" Margin="114,88,0,0" Name="cbPayloads" VerticalAlignment="Top" Width="346" />
                    <Label Content="Exploit" Height="28" HorizontalAlignment="Left" Margin="5,57,0,0" Name="label6" VerticalAlignment="Top" />
                    <ComboBox Height="23" HorizontalAlignment="Left" ItemsSource="{Binding}" Margin="114,59,0,0" Name="cbExploits" VerticalAlignment="Top" Width="346" SelectionChanged="cbExploits_SelectionChanged" />
                    <Label Content="Dbms" Height="28" HorizontalAlignment="Left" Margin="483,28,0,0" Name="label7" VerticalAlignment="Top" />
                    <ComboBox Height="23" HorizontalAlignment="Left" ItemsSource="{Binding}" Margin="549,32,0,0" Name="cbDbms" VerticalAlignment="Top" Width="311" />
                </Grid>    
            </TabItem>
            <TabItem Header="Proxy" Name="tabProxyOptions">
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Button Click="btnCurIP_Click" Content="Get current IP" Height="23" HorizontalAlignment="Left" Margin="9,35,0,0" Name="btnCurIP" VerticalAlignment="Top" Width="99" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="119,35,0,0" Name="txtCurIP" VerticalAlignment="Top" Width="189" />
                    <TextBox Height="23" HorizontalAlignment="Left" LostFocus="txtProxyFullAddress_LostFocus" Margin="9,6,0,0" Name="txtProxyFullAddress" VerticalAlignment="Top" Width="189" />
                    <CheckBox Checked="chkUseProxy_Checked" Content="Use proxy" Height="16" HorizontalAlignment="Right" Margin="0,9,469,0" Name="chkUseProxy" VerticalAlignment="Top" />
                    <ComboBox Height="23" HorizontalAlignment="Right" ItemsSource="{Binding Source={StaticResource proxyTypes}}" Margin="0,6,544,0" Name="cmbProxyType" SelectionChanged="cmbProxyType_SelectionChanged" VerticalAlignment="Top" Width="120" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
